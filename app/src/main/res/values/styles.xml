<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- SettingStyle. -->
    <style name="GeneralSettingStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingTextStyle">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- ______________________________________. -->

    <!-- ElementFormStyle. -->
    <style name="AppShapeAppearance.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>
    <!-- ______________________________________. -->

    <!-- PictureOfTheDayFragmentStyle. -->
    <style name="POTDFStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">?mainBackground</item>
        <item name="android:background">?mainBackground</item>
    </style>

    <!-- PictureOfTheDayFragmentStyle. -->
    <style name="BottomSheetFragmentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">?mainBackground</item>
        <item name="android:background">?mainBackground</item>
    </style>
</resources>
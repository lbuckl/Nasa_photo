<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- SettingStyle. -->
    <style name="GeneralSettingsStyle">
        <item name="android:background">?settingsBackground</item>
    </style>

    <style name="HeaderSettingTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingTextStyle">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- ______________________________________. -->

    <!-- ElementFormStyle. -->
    <style name="AppShapeAppearance.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    <!-- ______________________________________. -->

    <!-- PictureOfTheDayFragmentStyle. -->
    <style name="POTDFStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">?mainBackground</item>
        <item name="android:background">?mainBackground</item>
    </style>

    <!-- PictureOfTheDayFragmentStyle. -->
    <style name="BottomSheetFragmentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">?mainBackground</item>
        <item name="android:background">?mainBackground</item>
    </style>

    <!-- Стиль для наименования элемента меню. -->
    <style name="MenuItemNameStyle">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Стиль для параметра "описание" элемента меню. -->
    <style name="MenuItemDescriptionStyle">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Стиль текста для привественных окон greetings. -->
    <style name="greetingsTextStyle">
        <item name="android:paddingStart">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
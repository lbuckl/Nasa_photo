<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nasa_photo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueBack</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="mainBackground">@color/DarkBack</item>
        <item name="settingsBackground">@color/DarkBack</item>
        <item name="android:background">@color/blueBack</item>
        <item name="android:textColor">@color/white</item>
        <!-- menu. -->
        <item name="popupMenuBackground">@color/white</item>
        <item name="popupMenuStyle">@style/Theme.Nasa_photo</item>
        <!-- FAB. -->
        <item name="fabBackgroundColor">@color/teal_700</item>
        <item name="fab_icon">@drawable/ic_plus_fab</item>
    </style>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/Relative_layout_earth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/CardViewRightMargin">

            <ImageView
                android:id="@+id/imageView_Item_earth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/image_menu_item"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView_name_earth"
                style="@style/MenuItemNameStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView_Item_earth" />

            <TextView
                android:id="@+id/textView_description_earth"
                style="@style/MenuItemDescriptionStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_name_earth"
                android:layout_toEndOf="@+id/imageView_Item_earth" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>